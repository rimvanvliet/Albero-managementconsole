/* Add additional stylesheets below
-------------------------------------------------- */
/*
  Bootstrap's documentation styles
  Special styles for presenting Bootstrap's documentation and examples
*/

/* Body and structure
-------------------------------------------------- */
body {
    background-color: white;
    position: relative;
}

section {
    padding-top: 60px;
    min-height: 400px;
}

section > .row {
    margin-bottom: 10px;
}

.topbar p {
    color: #bfbfbf;
}

/* Alle links de primary kleur. */

a {
    color: #8e4f9c;
}

/* Fix minimale breedte van 90px voor small buttons. */
.input-small, input.small, textarea.small, select.small {
    width: inherit;
}

/* Jumbotrons
-------------------------------------------------- */
.jumbotron {
    min-width: 940px;
    padding-top: 20px;
}

.jumbotron .inner {
    background: transparent url(../../images/grid-18px.png) top center;
    padding: 40px 0 16px;
    -webkit-box-shadow: inset 0 10px 30px rgba(0, 0, 0, .3);
    -moz-box-shadow: inset 0 10px 30px rgba(0, 0, 0, .3);
}

.jumbotron h1,
.jumbotron p {
    margin-bottom: 9px;
    color: #fff;
    text-align: center;
    text-shadow: 0 1px 1px rgba(0, 0, 0, .3);
}

.jumbotron h1 {
    font-size: 54px;
    line-height: 1;
    text-shadow: 0 1px 2px rgba(0, 0, 0, .5);
    /* Image getoond, verberg tekst. */
    text-indent: -9999px;
    overflow: hidden;
}

.jumbotron p {
    font-weight: 300;
}

.jumbotron .lead {
    margin-top: 68px;
    font-size: 20px;
    line-height: 27px;
}

.jumbotron p a {
    color: #fff;
    font-weight: bold;
}

.jumbotron .container {
    background-image: url(../../images/logo-trivento-shop.png);
    background-repeat: no-repeat;
    background-position: right top;
    height: 195px;
}

/* Specific jumbotrons
------------------------- */
/* main docs page */
.masthead {
    /* 8e4f9c */
    background-color: #8e4f9c;
    background-repeat: no-repeat;
    background-image: -webkit-gradient(linear, left top, left bottom, from(#56315e), to(#a158b0));
    background-image: -webkit-linear-gradient(#56315e, #a158b0);
    background-image: -moz-linear-gradient(#56315e, #a158b0);
    background-image: -o-linear-gradient(top, #56315e, #a158b0);
    background-image: -khtml-gradient(linear, left top, left bottom, from(#56315e), to(#a158b0));
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr = '#56315e', endColorstr = '#a158b0', GradientType = 0); /* IE8 and down */
}


/* Aanpassingen Bootstrap styles. */

/* Iets donkerdere tekst in velden dan standaard. */
input, textarea, select {
    color: #333;
}

/* Messages tonen zonder bullets en in zwart. */
div.alert-message ul {
    list-style: none;
    margin: 0;
    padding: 0;
}

div.alert-message li {
    color: inherit;
}

/* De primary button oranje, ipv blauw. */
.btn.primary {
    background-color: #744280;
    background-image: -khtml-gradient(linear, left top, left bottom, from(#a459b3), to(#744280));
    background-image: -moz-linear-gradient(top, #a459b3, #744280);
    background-image: -ms-linear-gradient(top, #a459b3, #744280);
    background-image: -webkit-gradient(linear, left top, left bottom, color-stop(0%, #a459b3), color-stop(100%, #744280));
    background-image: -webkit-linear-gradient(top, #a459b3, #744280);
    background-image: -o-linear-gradient(top, #a459b3, #744280);
    background-image: linear-gradient(top, #a459b3, #744280);
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr = '#a459b3', endColorstr = '#744280', GradientType = 0);
    border-color: #a459b3 #a459b3 #8e4f9c;
}


/* Footer
-------------------------------------------------- */
.footer {
  background-color: #eee;
  min-width: 940px;
  padding: 30px 0;
  text-shadow: 0 1px 0 #fff;
  border-top: 1px solid #e5e5e5;
  -webkit-box-shadow: inset 0 5px 15px rgba(0,0,0,.025);
  -moz-box-shadow: inset 0 5px 15px rgba(0,0,0,.025);
}

.footer p {
  color: #555;
}


/* Datum in niet proprtioneel lettertype, zodat onder elkaar uitgelijnd. */
.date {
    white-space: nowrap;
}

.rightalign {
    text-align: right;
}

.nowrap {
    white-space: nowrap;
}

/* Getallen in een cel rechts uitlijnen. */
.number {
    text-align: right;
    white-space: nowrap;
}

.strong {
    color: black;
    font-weight: bold;
}

.stronger {
    font-weight: bolder;
}

/* Tekst verticaal in het midden in alle tabellen. */
table tbody td {
    vertical-align: middle;
}
