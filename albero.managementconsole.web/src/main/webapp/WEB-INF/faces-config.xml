<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<application>
		<locale-config>
			<default-locale>nl</default-locale>
		</locale-config>
		<message-bundle>messages</message-bundle>
		<resource-bundle>
			<base-name>messages</base-name>
			<var>res</var>
		</resource-bundle>
	</application>
	<managed-bean>
		<managed-bean-name>treeManagedBean</managed-bean-name>
		<managed-bean-class>nl.profict.albero.managementconsole.TreeManagedBean</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>	

	<navigation-rule>
		<navigation-case>
			<from-outcome>tree</from-outcome>
			<to-view-id>/pages/tree.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>
	<navigation-rule>
		<navigation-case>
			<from-outcome>list_trees</from-outcome>
			<to-view-id>/pages/list_trees.xhtml</to-view-id>
			<redirect />
		</navigation-case>
	</navigation-rule>	
</faces-config>

